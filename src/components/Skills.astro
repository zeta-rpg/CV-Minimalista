---
import Sections from './Sections/Sections.astro'
import { skills } from '../cv.json'

---

<Sections title="Skills">
    <ul>
        {skills.map(({ name }) => (
            <li>
                <strong>{name}</strong> 
            </li>
        ))}
    </ul>
</Sections>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        list-style: none;
        flex-wrap: wrap;
    }
    li {
        border-radius: 6px;
        background: #232323;
        color: #ffffff;
        font-size: .8rem;
        font-weight: 500;
        padding: .2rem .5rem;
        cursor: pointer;
    }

    li:hover {
        background: #3a3a3a;
    }
    strong {
        font-weight: 600;
    }
</style>
